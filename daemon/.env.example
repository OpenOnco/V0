# OpenOnco Daemon Environment Variables

# =============================================================================
# REQUIRED
# =============================================================================

# Resend (email delivery)
RESEND_API_KEY=re_your_api_key
DIGEST_RECIPIENT_EMAIL=you@example.com
DIGEST_FROM_EMAIL=daemon@openonco.org

# Anthropic (Claude AI for analysis)
ANTHROPIC_API_KEY=sk-ant-your_api_key

# =============================================================================
# OPTIONAL
# =============================================================================

# Crawler enable/disable (all enabled by default)
CRAWLER_CMS_ENABLED=true
CRAWLER_PAYERS_ENABLED=true
CRAWLER_VENDORS_ENABLED=true

# Schedule overrides (cron syntax)
# Default: crawlers Sunday 11 PM, digest Monday 1 AM
SCHEDULE_CMS=0 23 * * 0
SCHEDULE_PAYERS=0 23 * * 0
SCHEDULE_VENDORS=0 23 * * 0
SCHEDULE_DIGEST=0 1 * * 1

# Rate limits (requests per second)
RATE_LIMIT_CMS=5
RATE_LIMIT_PAYERS=0.2
RATE_LIMIT_VENDORS=3

# Logging
LOG_LEVEL=info

# Environment
NODE_ENV=development
